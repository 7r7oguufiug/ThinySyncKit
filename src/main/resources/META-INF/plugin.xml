<idea-plugin>
    <id>com.hi.dhl.SyncKit</id>
    <name>SyncKit</name>
<!-- https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html#intellij-platform-based-products-of-recent-ide-versions -->
    <idea-version since-build="163"/>
    <vendor email="hihuilong@gmail.com" url="https://www.hi-dhl.com">hi-dhl</vendor>

    <description><![CDATA[
        The plugin use in AndroidStudio or IntelliJ IDEA.<br>
        <b>The main features:</b><br>
        <ul>
            <li>Sync local file to remote machine</li>
            <li>Remote compile/build android or java on the remote machine</li>
            <li>Install apk</li>
            <li>Install the JDK or Android SDK or NDK on the remote machine</li>
        </ul>
    ]]></description>

    <change-notes><![CDATA[
        <b>Version 1.0.0</b>
        <ul>
            <li>Sync local file to remote machine</li>
            <li>Remote compile/build android or java on the remote machine</li>
            <li>Install apk</li>
            <li>Install the JDK or Android SDK or NDK on the remote machine</li>
        </ul>
    ]]></change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.androidstudio</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <consoleFilterProvider implementation="com.hi.dhl.console.SyncConsoleFilterProvider"/>

        <notificationGroup id="SyncKitEventLog"
                           displayType="NONE"
                           key="SyncKitEventLog"/>
        <notificationGroup id="SyncKitBallon"
                           displayType="BALLOON"
                           key="SyncKitBallon"/>
        <notificationGroup id="SyncKitStickBallon"
                           displayType="STICKY_BALLOON"
                           key="SyncKitStickBallon"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="SyncKitGroup" icon="/icons/kit.png" popup="true">
            <!--
                ICON
                地址：https://www.iconfont.cn/search/index?searchType=icon&q=%E5%90%8C%E6%AD%A5&page=1&fromCollection=1&fills=&tag=
                颜色：08af72
            -->
            <action id="SyncKit.CompileAnAction" class="com.hi.dhl.action.CompileAnAction" text="Sync/Build"
                    icon="/icons/kit.png"/>

            <action id="SyncKit.SyncToServiceAnAction" class="com.hi.dhl.action.SyncToServiceAnAction"
                    text="Sync To Service" icon="/icons/kit.png"/>

            <group id="SyncKitAdbGroup" icon="/icons/kit.png" text="ADB" popup="true">
                <action id="SyncKit.InstallApkAnAction" class="com.hi.dhl.action.InstallApkAnAction" text="install apk"
                        icon="/icons/kit.png"/>
            </group>

            <group id="SyncKitServiceGroup" icon="/icons/kit.png" text="Service" popup="true">
                <action id="SyncKit.InstallJDK11AnAction" class="com.hi.dhl.action.InstallJDK11AnAction"
                        text="install JDK 11" icon="/icons/kit.png"/>
                <action id="SyncKit.InstallAndroidSdkAnAction" class="com.hi.dhl.action.InstallAndroidSdkAnAction"
                        text="install Android SDK" icon="/icons/kit.png"/>
            </group>
            <add-to-group group-id="MainToolBar" relative-to-action="ToolbarRunGroup" anchor="after"/>
        </group>

    </actions>
</idea-plugin>